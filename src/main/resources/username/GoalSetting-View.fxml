<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="username.controller.GoalsController">
    <children>
        <!-- Title and Current Date -->
        <VBox layoutX="20.0" layoutY="20.0" spacing="5.0">
            <Label text="Goal Setting">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <Label text="May 12, 2024" textFill="#888888">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </VBox>

        <!-- Add and Edit Goal Buttons -->
        <HBox layoutX="20.0" layoutY="70.0" spacing="20.0">
            <Button fx:id="addGoalButton" graphic="$addImage">
                <padding>
                    <Insets left="10.0" right="10.0" />
                </padding>
            </Button>
            <Button fx:id="editGoalButton" graphic="$editImage">
                <padding>
                    <Insets left="10.0" right="10.0" />
                </padding>
            </Button>
        </HBox>

        <!-- Tracking for Current Goals -->
        <VBox layoutX="20.0" layoutY="130.0" spacing="10.0">
            <Label text="Current Goals">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <GridPane hgap="10.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="50.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <!-- Goal 1 -->
                <ImageView GridPane.columnIndex="0" GridPane.rowIndex="0" fitHeight="50.0" fitWidth="50.0">
                    <image>
                        <Image url="$goal1Image" />
                    </image>
                </ImageView>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="0" text="$goal1Label" />
                <!-- Goal 2 -->
                <ImageView GridPane.columnIndex="0" GridPane.rowIndex="1" fitHeight="50.0" fitWidth="50.0">
                    <image>
                        <Image url="$goal2Image" />
                    </image>
                </ImageView>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="$goal2Label" />
            </GridPane>
        </VBox>

        <!-- Goal Tracking Stats -->
        <VBox layoutX="20.0" layoutY="300.0" spacing="10.0">
            <Label text="Goal Tracking">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <GridPane hgap="10.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Daily Usage:" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="0" text="$dailyUsage" />
                <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Weekly Usage:" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="$weeklyUsage" />
                <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Weekly Productive Time Percentage:" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="2" text="$weeklyProductiveTimePercentage" />
            </GridPane>
        </VBox>

        <!-- Goal History -->
        <VBox layoutX="400.0" layoutY="130.0" spacing="10.0">
            <Label text="Goal History">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <HBox spacing="5.0">
                <!-- Red or Green dots for last 7 days -->
                <Circle radius="5.0" fill="$redOrGreen" />
                <Circle radius="5.0" fill="$redOrGreen" />
                <Circle radius="5.0" fill="$redOrGreen" />
                <Circle radius="5.0" fill="$redOrGreen" />
                <Circle radius="5.0" fill="$redOrGreen" />
                <Circle radius="5.0" fill="$redOrGreen" />
                <Circle radius="5.0" fill="$redOrGreen" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
