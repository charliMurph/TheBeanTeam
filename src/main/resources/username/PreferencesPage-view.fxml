<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="username.controller.UserPreferenceController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10">
        <Label text="App Preferences" style="-fx-font-weight: bold;"/>

        <!-- Checkbox for selecting apps -->
        <CheckBox text="Google" fx:id="app1Checkbox"/>
        <CheckBox text="Steam" fx:id="app2Checkbox"/>
        <!-- Add more checkboxes for additional apps -->

        <!-- Button to update preferences -->
        <Button text="Update Preferences" onAction="#handleUpdatePreferences"/>

        <!-- Button to navigate to the app tracker page -->
        <Button text="Add App" onAction="#navigateToAddAppPage"/>
    </VBox>
</AnchorPane>
