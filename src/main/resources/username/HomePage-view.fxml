<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="username.controller.HomePageController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Greeting label -->
    <Label fx:id="greetingLabel" layoutX="35.0" layoutY="42.0" text="Hello, FirstName!" />

    <!-- Button for navigating to user preferences page -->
    <Button layoutX="35.0" layoutY="100.0" text="User Preferences" onAction="#handleUserPreferencesButtonClick" />
    <Button text="Logout" onAction="#handleLogoutButton"/>

</AnchorPane>
